<header class=" text-black p-6 shadow-lg  flex justify-between items-center">
    <div class="flex flex-col ">
         <h2 class="text-lg md:text-2xl font-semibold">Sala: <span id="sala" class="text-blue-500"></span></h2>
        <h2 class="text-sm md:text-xl ">Usuario: <span id="apodo" class="text-blue-500 font-semibold"></span></h2>
       
    </div>
    <a href="/" class="px-6 py-3 text-white bg-red-600 rounded-full text-xl font-semibold hover:bg-red-700 active:shadow-red-600 active:shadow-md">Lobby</a>
</header>

<script is:inline>
    const apodo = document.getElementById("apodo");
    const sala = document.getElementById("sala");
    const usuario = JSON.parse(localStorage.getItem("sessionActual"));

    if (usuario) {
        apodo.textContent = usuario.nombre;
        sala.textContent = usuario.sala;
    } else {
        apodo.textContent = "Sin usuario";
        sala.textContent = "Sala no definida";
    }
</script>